<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="stephenwk.com.soa_guildwars2"
    android:versionCode="1"
    android:versionName="1.0 Release">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/clean_avatar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/clean_avatar"
        android:supportsRtl="true"
        android:theme="@style/Theme.SOA_GuildWars2">
        <activity
            android:name=".app.guild.guildmember.GuildMemberActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".app.guild.guilddetail.GuildDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".app.splashscreen.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.apikey.ApiKeyActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".app.home.dailyachievements.dailyachievementsdetail.DailyDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".app.home.worldboss.worldbossdetail.WorldBossDetail"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".app.MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>